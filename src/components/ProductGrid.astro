    const id = doc.id;

    // æ’é™¤ç«™ç‚¹æ ¹é¦–é¡µ (ID ä¸º 'index')
    if (id === 'index') return false;

    // æ ¸å¿ƒé€»è¾‘ï¼šåªè¦ ID ä¸­ä¸åŒ…å« "/"ï¼Œå°±è¯´æ˜å®ƒæ˜¯é¡¶çº§ç›®å½•ï¼ˆå³äº§å“ç›®å½•ï¼‰
    // Starlight çš„ docsLoader ä¼šè‡ªåŠ¨æŠŠ 'product1/index.md' çš„ ID å¤„ç†ä¸º 'product1'
    return !id.includes('/');
  })
