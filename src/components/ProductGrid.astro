<div class="product-grid">
  {products.map((product) => (
    <a href={product.href} class="product-card">
      {product.image && (
        <div class="image-container">
           <Image src={product.image} alt={product.title} width={400} />
        </div>
      )}
      <div class="content">
        <h3>{product.title}</h3>
        <p>{product.description}</p>
      </div>
    </a>
  ))}

  {products.length === 0 && (
